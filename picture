from graph import *
import random
import math

def ellips(xc, yc, a, b, fi=0):
    l=[]
    for x in range(-a, a):
        y = ((1 - x**2 / a**2) * b**2) ** (1/2)
        l.append((xc + math.cos(fi) * x + math.sin(fi) * y, (yc - math.sin(fi) * x + math.cos(fi) * y)))
    for x in range(a, -a, -1)
        y = ((1 - x**2 / a**2) * b**2) ** (1/2)
        l.append((xc + math.cos(fi) * x + math.sin(fi) * (-y), (yc - math.sin(fi) * x + math.cos(fi) * (-y))))
    polygon(l)



width = 600
height = 600
r=50-20
g=77-10
b=90-10
brushColor(r, g, b)
rectangle (0, 0, width, height)
for i in range(height):
    penColor(r, g, b)
    line(0, i, 600, i)
    if i % 10 == 0:
        r += 1
        g += 1
        b += 1
brushColor(35, 25, 15)
rectangle(0, 400, 600, 600)
