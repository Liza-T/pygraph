    k = random.randint(0, 15)
    brushColor(50+k, 90+k, 100+k)
    penColor(brushColor())
    circle(random.randint(0, 600), random.randint(0, 300), random.randint(10, 100))
for i in range(200):
    point(random.randint(0, 600), random.randint(0, 400), 'white')
